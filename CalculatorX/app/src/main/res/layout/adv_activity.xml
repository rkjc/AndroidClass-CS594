<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_height="120dp"
        android:layout_width="match_parent"
        android:background="#228"
        android:padding="0dp"
        android:gravity="fill_horizontal"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="right|bottom"
            android:background="#fff"
            android:layout_weight="2"
            android:textSize="40dp"
            android:text="0"
            />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_weight="1"
            >


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="top|left"
                android:layout_weight="2"
                android:textSize="15dp"
                android:textColor="#fff"
                android:text="deg"
                />

            <Button
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#f33"
                android:textSize="15dp"
                android:layout_weight="2"
                android:text="CLEAR" />

            <Button
                android:id="@+id/mode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#3f6"
                android:textSize="15dp"
                android:layout_weight="2"
                android:text="BASIC" />

            <Button
                android:id="@+id/backSp"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="#3af"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_weight="2"
                android:text="@string/backSp" />

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_height="400dp"
        android:layout_width="match_parent"
        android:background="#0e4"
        android:padding="0dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        >

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:gravity="center_vertical"
            android:columnCount="4"
            android:rowCount="4"
            android:padding="0dp"
            android:layout_margin="0dp"
            >

            <Button
                android:id="@+id/button7"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="Sin"/>

            <Button
                android:id="@+id/button8"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="Cos"/>

            <Button
                android:id="@+id/button9"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="Tan"/>

            <Button
                android:id="@+id/buttonDiv"
                android:layout_column="3"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="" />





            <Button
                android:id="@+id/button4"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="Ln" />

            <Button
                android:id="@+id/button5"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="LOG" />

            <Button
                android:id="@+id/button6"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="PI" />

            <Button
                android:id="@+id/buttonTimes"
                android:layout_column="3"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="e" />





            <Button
                android:id="@+id/button1"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="%" />

            <Button
                android:id="@+id/button2"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="!" />

            <Button
                android:id="@+id/button3"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"

                android:text="Sqrt" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_column="3"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="Exp" />





            <Button
                android:id="@+id/buttonDot"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="Log\nbase x" />

            <Button
                android:id="@+id/button0"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="Log\nbase 2" />

            <Button
                android:id="@+id/buttonEq"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_column="3"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="" />

        </GridLayout>

    </FrameLayout>

</LinearLayout>